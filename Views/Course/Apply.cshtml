@model Candidate


<div class="diplay-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            @for (int age = 18; age <= 24; age++)
            {
                <option value="@age">@age</option>
            }
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked/>
            <label for="">ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API" />
            <label for="">ASP.NET Core API</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Blazor" />
            <label for="">Blazor</label>
        </p>
    </fieldset>


    <div>
        <button class="btn btn-primary" type="submit">Apply</button>

        <a class="btn btn-warning " asp-controller="Home" asp-action="Index">Home</a>
    </div>

</form>